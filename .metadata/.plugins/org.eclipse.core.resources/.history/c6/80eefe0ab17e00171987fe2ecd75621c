#include <stdio.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <string.h>
#include <stdlib.h>
#include <unistd.h>
#include <arpa/inet.h>

int main()
{
	int sockfd,buf[256],portno;
	char mip[32];
	struct sockaddr_in mcast;
	printf("Enter Multicast IP address to listen to : ");
	scanf("%s",mip);
	printf("Enter Port No :");
	scanf("%d",&portno);
	sockfd = socket(AF_INET,SOCK_DGRAM,0);
	if(sockfd < 0)
	{
		perror("Error in Socket Connection ");
		exit(1);
	}
	memset(&mcast,'\0',sizeof(mcast));
	mcast.sin_family = AF_INET;
	mcast.sin_addr.s_addr = htonl(mip);

	setsockopt(sockfd,IPPROTO_IP,IP_ADD_MEMBERSHIP,&mcast,);
}
