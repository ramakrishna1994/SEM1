#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <stdlib.h>

int main()
{
	key_t key = 1234;
	int shmid = shmget(key,27,IPC_CREAT | 0666);
	if(shmid < 0)
	{
		perror("Getting Share Memory Failed ");
		exit(1);
	}
	void *shm = shmat(shmid,NULL,0);
	if((char *)shm < (char *)-1)
	{
		perror("Attaching process to Shared Memory Failed");
		exit(1);
	}
	printf ("shared memory attached at address %p\n", shm);
	printf("Enter Data to be put in shared memory :");
	scanf("%s",(char *)shm);

	/* Detach the shared memory segment. */
	shmdt (shm);

}
