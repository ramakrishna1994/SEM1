#include <unistd.h>
#include <stdlib.h>
#include <stdio.h>
#include <pthread.h>
int pipedata [2];

void *writer_function (void *threadnumber)
{
	int threadid = (int *)threadnumber;
	printf("Thread id : %d\n",threadid);
	pthread_exit (NULL);
}

int main ()
{
	pthread_t pt[3];
	for(int i=1;i<=2;i++)
	{
		pthread_create(&pt[i],NULL,writer_function,(void *)i);
	}

	for(int i=1;i<=2;i++)
	{
		pthread_join(pt[i],NULL);
	}
	exit(0);
}



