#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <stdlib.h>

int main()
{
	key_t key = 5678;
	int shmid = shmget(key,0,IPC_CREAT | 0666);
	if(shmid < 0)
	{
		perror("Getting Share Memory Failed ");
		exit(1);
	}
	printf("Shared Memory ID is : %d\n",shmid);
	char *shm = (char *)shmat(shmid,NULL,0);
	if(shm == NULL)
	{
		perror("Attaching process to Shared Memory Failed");
		exit(1);
	}
	printf ("shared memory attached at address %p\n", shm);
	printf("Enter Data to be put in shared memory :");
	scanf("%s",shm);
	printf("Data posted to shared memory!!\n");
	/* Detach the shared memory segment. */
	shmdt (shm);
	printf("Detaching process from shared memory\n");
	printf("Attaching the process again to Existing Shared memory");
	char *oldshm = shmat(shmid,shm,SHM_RDONLY);
	printf("%s",oldshm);
	printf("Detaching process from shared memory again\n");
	shmdt (oldshm);
	return 0;
}
